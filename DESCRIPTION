Package: biogrowth
Type: Package
Title: Modelling of Microbial Growth 
Version: 0.1.1
Authors@R: c(person("Alberto", "Garre", email = "garre.alberto@gmail.com", role = c("aut", "cre"), comment = c(ORCID = "0000-0002-4404-3550")),
